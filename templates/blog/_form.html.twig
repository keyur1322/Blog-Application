{{ form_start(form) }}
<div class="container">
    <div class="row">
        <div class="col-md-11 ml-md-auto">
            <div class="card bg-light mb-3 mt-5">
                <div class="card-body">
                    <div class="card-header mb-3" id="testdiv">Add new blog</div>
                    <div class="form-group">
                        {{ form_widget(form.title, {'attr': {'class': 'form-control' , 'placeholder' : 'Enter a title'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_widget(form.shortdescription, {'attr': {'class': 'form-control' , 'placeholder' : 'Enter a short description'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_widget(form.longdescription, {'attr': {'class': 'form-control' , 'placeholder' : 'Enter a long description'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_widget(form.category, {'attr': {'class': 'form-control'}} )}}
                    </div>
                    <div class="form-group">
                        {{ form_widget(form.image) }}
                    </div>
                    <button type="submit" name="blogbtn" class="btn btn-primary">
                        <i class="fa fa-btn fa-sign-in"></i> {{ button_label|default('Save') }}
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
{{ form_end(form) }}
