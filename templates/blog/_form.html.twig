{{ form_start(form) }}
<div class="container">
  <div class="row">
    <div class="col-md-10 ml-md-auto">
      <div class="">
        <div class="card bg-light mb-3 mt-5" style="width: 800px;">
          <div class="card-body">
          <div class="card-header mb-3">Add New Blog</div>
              <div class="form-group">
                <div class="col-md-12">
                  {{ form_widget(form.title, {'attr': {'class': 'form-control' , 'placeholder' : 'Enter a title of blog'}}) }}
                </div>
              </div>
              <div class="form-group">
                <div class="col-md-12">
                  {{ form_widget(form.ShortDescription, {'attr': {'class': 'form-control' , 'placeholder' : 'Enter a short description of blog'}}) }}
                </div>
              </div>
              <div class="form-group">
                <div class="col-md-12">
                  {{ form_widget(form.LongDescription, {'attr': {'class': 'form-control' , 'placeholder' : 'Enter a long description of blog'}}) }}
                </div>
              </div>
              <div class="form-group">
                <div class="col-md-12">
                  {{ form_widget(form.category, {'attr': {'class': 'form-control', 'placeholder' : 'Select a category of blog'}}) }}
                </div>
              </div>
              <div class="form-group">
                <div class="col-md-12">
                  {{ form_widget(form.image) }}
                </div>
              </div>
                 <div class="form-group">
                <div class="col-md-12">
                  <button type="submit" class="btn btn-primary">
                    <i class="fa fa-btn fa-sign-in"></i> {{ button_label|default('Save') }}
                  </button>
                </div>
              </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{{ form_end(form) }}
